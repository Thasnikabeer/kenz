<script>
    function copyCoupon(couponCode) {
        // Create a temporary textarea element to copy the text
        const tempTextarea = document.createElement('textarea');
        tempTextarea.value = couponCode;
        document.body.appendChild(tempTextarea);
        
        // Select the text inside the textarea
        tempTextarea.select();
        tempTextarea.setSelectionRange(0, 99999); /* For mobile devices */
        
        // Copy the selected text
        document.execCommand('copy');
        
        // Remove the temporary textarea
        document.body.removeChild(tempTextarea);
        
        // Display SweetAlert confirmation
        Swal.fire({
            icon: 'success',
            title: 'Coupon Copied!',
            text: `Coupon code '${couponCode}' has been copied to clipboard.`,
            showConfirmButton: false,
            timer: 2000, // Close the alert after 2 seconds
            iconColor: '#4BB543', // Green color
            customClass: {
                popup: 'swal-popup-class', // Customizes the popup style
                content: 'swal-content-class', // Customizes the content style
                closeButton: 'swal-close-button-class' // Customizes the close button style
            },
            position: 'center' // Center align the alert
        });
    }
</script>

